@model HelpDeskKyotera.ViewModels.UserDashboardViewModel

@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dashboard-hero {
        background: linear-gradient(90deg,#0d6efd10 0%, #19875408 100%);
        border-radius: 12px;
        padding: 1.25rem;
        box-shadow: 0 6px 18px rgba(13,110,253,0.04);
    }
    .stat-card { border-radius: 12px; box-shadow: 0 6px 18px rgba(15,23,42,0.04); }
    .avatar-circle { width:64px;height:64px;border-radius:50%;display:flex;align-items:center;justify-content:center;background:#eef2ff;color:#0d6efd;font-weight:700;font-size:1.1rem }
    .quick-action { min-width:120px }
</style>

<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            @Html.Partial("~/Views/Shared/_UserDashboardSidebar.cshtml")
        </div>

        <div class="col-lg-9">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="dashboard-hero d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-3">
                            <div class="avatar-circle">@Model.FirstName?.Substring(0,1)</div>
                            <div>
                                <h2 class="mb-0 fw-bold">Hello, @Model.FirstName!</h2>
                                <div class="text-muted">Welcome back â€” here's a summary of your help desk activity.</div>
                            </div>
                        </div>
                        <div class="d-flex gap-2 align-items-center">
                            <a href="/Tickets/Create" class="btn btn-primary quick-action"><i class="bi bi-plus-circle me-1"></i> New Ticket</a>
                            <a href="@Url.Action("Index","Chat")" class="btn btn-outline-primary quick-action"><i class="bi bi-chat-left-text me-1"></i> Chat</a>
                            @if (Model.UserRoles.Contains("Admin") || Model.UserRoles.Contains("Staff") || Model.UserRoles.Contains("CEO"))
                            {
                                <a href="/Charts" class="btn btn-outline-secondary quick-action"><i class="bi bi-bar-chart-fill me-1"></i> Charts</a>
                            }
                            <a asp-action="Profile" class="btn btn-outline-info quick-action"><i class="bi bi-person-circle me-1"></i> Profile</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-sm-6 col-md-3">
            <div class="card stat-card p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="me-3 text-primary"><i class="bi bi-ticket-perforated" style="font-size:2rem"></i></div>
                    <div>
                        <div class="text-muted small">My Tickets</div>
                        <div class="fw-bold fs-4">@Model.TotalRequestedTickets</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="card stat-card p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="me-3 text-success"><i class="bi bi-check2-circle" style="font-size:2rem"></i></div>
                    <div>
                        <div class="text-muted small">Assigned To Me</div>
                        <div class="fw-bold fs-4">@Model.TotalAssignedTickets</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="card stat-card p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="me-3 text-warning"><i class="bi bi-clock-history" style="font-size:2rem"></i></div>
                    <div>
                        <div class="text-muted small">Recent Activity</div>
                        <div class="fw-bold fs-4">@Model.RecentRequestedTickets.Count()</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="card stat-card p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="me-3 text-secondary"><i class="bi bi-people" style="font-size:2rem"></i></div>
                    <div>
                        <div class="text-muted small">Department</div>
                        <div class="fw-bold fs-6">@(Model.Department?.Name ?? "Not Assigned")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7 mb-4">
            <div class="card h-100">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Tickets</h5>
                    <a asp-action="MyTickets" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentRequestedTickets.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ticket #</th>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th class="text-end">Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ticket in Model.RecentRequestedTickets.Take(7))
                                    {
                                        <tr>
                                            <td class="fw-semibold"><a href="/Tickets/Details/@ticket.TicketId" class="text-decoration-none">@ticket.TicketNumber</a></td>
                                            <td>@ticket.Title</td>
                                            <td>@(ticket.Status != null ? ticket.Status.Name : "-")</td>
                                            <td class="text-end"><small class="text-muted">@ticket.CreatedOn.ToString("MMM dd")</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">No tickets submitted yet.</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-5 mb-4">
            <div class="card h-100">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">Assigned to Me</h5>
                </div>
                <div class="card-body">
                    @if ((Model.UserRoles.Contains("Staff") || Model.UserRoles.Contains("Admin")) && Model.RecentAssignedTickets.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var t in Model.RecentAssignedTickets.Take(6))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-semibold">@t.Title</div>
                                        <small class="text-muted">#@t.TicketNumber</small>
                                    </div>
                                    <div><span class="badge bg-warning">@t.Priority?.Name ?? "N/A"</span></div>
                                </li>
                            }
                        </ul>
                        <div class="mt-3 text-center"><a asp-action="AssignedTickets" class="btn btn-sm btn-outline-success">View All Assigned</a></div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">No assigned tickets.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
