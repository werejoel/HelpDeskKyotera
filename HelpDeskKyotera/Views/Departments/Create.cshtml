@model HelpDeskKyotera.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Create New Department</h1>
            <hr />

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label for="name" class="form-label">Department Name <span class="text-danger">*</span></label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter department name" required />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" id="description" class="form-control" rows="3" placeholder="Enter department description"></textarea>
                </div>

                <div class="mb-3">
                    <label for="LocationId" class="form-label">Location <span class="text-danger">*</span></label>
                    <select name="LocationId" id="LocationId" class="form-control" required>
                        <option value="">-- Select a location --</option>
                        @if (ViewBag.LocationId != null)
                        {
                            @foreach (var item in ViewBag.LocationId)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="headId" class="form-label">Head of Department</label>
                    <select name="headId" id="headId" class="form-control">
                        <option value="">-- Select head of department --</option>
                        @if (ViewBag.HeadOfDepartmentId != null)
                        {
                            @foreach (var item in ViewBag.HeadOfDepartmentId)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create Department</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
