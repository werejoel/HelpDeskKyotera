@model HelpDeskKyotera.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Confirm Deletion</h4>
                <p>Are you sure you want to delete this department? This action cannot be undone.</p>
            </div>

            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">@Model?.Name</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Department Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model?.Description))
                            {
                                @Html.DisplayFor(model => model!.Description)
                            }
                            else
                            {
                                <em class="text-muted">No description provided</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Location:</dt>
                        <dd class="col-sm-9">
                            @if (Model?.Location != null)
                            {
                                @Html.DisplayFor(model => model!.Location.Name)
                            }
                            else
                            {
                                <em class="text-muted">N/A</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Head of Department:</dt>
                        <dd class="col-sm-9">
                            @if (Model?.Head != null)
                            {
                                <span>@Model.Head.FirstName @Model.Head.LastName</span>
                            }
                            else
                            {
                                <em class="text-muted">Unassigned</em>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <form asp-action="Delete" method="post" style="display: inline-block;">
                    <input type="hidden" asp-for="DepartmentId" />
                    <button type="submit" class="btn btn-danger">Delete Department</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
