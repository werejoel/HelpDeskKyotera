@model IEnumerable<HelpDeskKyotera.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1>Departments</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">+ Create New Department</a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Department Name</th>
                        <th>Description</th>
                        <th>Head of Department</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @if (item?.Head != null)
                                {
                                    <span>@item.Head.FirstName @item.Head.LastName</span>
                                }
                                else
                                {
                                    <em class="text-muted">Unassigned</em>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.Name)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>No departments found. <a asp-action="Create">Create a new one</a></p>
        </div>
    }
</div>
