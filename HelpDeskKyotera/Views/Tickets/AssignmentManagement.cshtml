@using HelpDeskKyotera.Models
@model List<Ticket>

@{
    ViewData["Title"] = "Manage Ticket Assignments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold">Manage Ticket Assignments</h1>
            <p class="text-muted">Assign and manage unassigned tickets</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-warning bg-opacity-10">
                <div class="card-body">
                    <h6 class="text-muted mb-1">Unassigned Tickets</h6>
                    <h3 class="fw-bold text-warning">@ViewBag.UnassignedCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-info bg-opacity-10">
                <div class="card-body">
                    <h6 class="text-muted mb-1">Critical Priority</h6>
                    <h3 class="fw-bold text-info">@ViewBag.CriticalCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-danger bg-opacity-10">
                <div class="card-body">
                    <h6 class="text-muted mb-1">High Priority</h6>
                    <h3 class="fw-bold text-danger">@ViewBag.HighCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-success bg-opacity-10">
                <div class="card-body">
                    <h6 class="text-muted mb-1">Overdue Tickets</h6>
                    <h3 class="fw-bold text-success">@ViewBag.OverdueCount</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Filter Tickets</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="priority" class="form-label">Priority</label>
                    <select class="form-select" id="priority" name="priority">
                        <option value="">All Priorities</option>
                        <option value="Critical">Critical</option>
                        <option value="High">High</option>
                        <option value="Medium">Medium</option>
                        <option value="Low">Low</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-select" id="category" name="category">
                        <option value="">All Categories</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var cat in ViewBag.Categories)
                            {
                                <option value="@cat.Value">@cat.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="sortBy" class="form-label">Sort By</label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="created">Created Date</option>
                        <option value="dueDate">Due Date</option>
                        <option value="priority">Priority</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Unassigned Tickets Table -->
    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">Unassigned Tickets (@Model.Count)</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Ticket #</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Priority</th>
                            <th>Requester</th>
                            <th>Created</th>
                            <th>Due Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {
                            <tr>
                                <td>
                                    <a href="/Tickets/Details/@ticket.TicketId" class="text-decoration-none fw-semibold">
                                        @ticket.TicketNumber
                                    </a>
                                </td>
                                <td>@ticket.Title</td>
                                <td>@ticket.Category?.Name</td>
                                <td>
                                    @{
                                        var priorityClass = ticket.Priority?.Name switch 
                                        {
                                            "Critical" => "bg-danger",
                                            "High" => "bg-warning text-dark",
                                            "Medium" => "bg-info",
                                            _ => "bg-success"
                                        };
                                        var priorityName = ticket.Priority?.Name ?? "Unknown";
                                    }
                                    <span class="badge @priorityClass">
                                        @priorityName
                                    </span>
                                </td>
                                <td>@ticket.Requester?.FirstName @ticket.Requester?.LastName</td>
                                <td>@ticket.CreatedOn.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (ticket.DueBy.HasValue)
                                    {
                                        <span class="@(ticket.DueBy.Value < DateTime.Now ? "text-danger fw-bold" : "")">
                                            @ticket.DueBy.Value.ToString("MMM dd, yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" 
                                            data-bs-target="#assignModal_@ticket.TicketId">
                                        <i class="bi bi-person-check"></i> Assign
                                    </button>

                                    <!-- Assignment Modal for each ticket -->
                                    <div class="modal fade" id="assignModal_@ticket.TicketId" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Assign Ticket @ticket.TicketNumber</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form method="post" asp-action="Assign">
                                                    <input type="hidden" name="id" value="@ticket.TicketId" />
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label for="assignToUser_@ticket.TicketId" class="form-label">Assign To</label>
                                                            <select class="form-select" id="assignToUser_@ticket.TicketId" name="assignedToId" required>
                                                                <option value="">-- Select Staff Member --</option>
                                                                @if (ViewBag.AvailableStaff != null)
                                                                {
                                                                    @foreach (var staff in ViewBag.AvailableStaff)
                                                                    {
                                                                        <option value="@staff.Value">@staff.Text</option>
                                                                    }
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="notes_@ticket.TicketId" class="form-label">Assignment Notes (Optional)</label>
                                                            <textarea class="form-control" id="notes_@ticket.TicketId" rows="3" 
                                                                      placeholder="Add notes about this assignment..."></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-primary">Assign Ticket</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            <i class="bi bi-check-circle"></i> Great! All tickets are assigned.
        </div>
    }
</div>
