@using HelpDeskKyotera.Controllers
@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex" style="min-height: 100vh; background: #f8f9fa;">
    <!-- Sidebar -->
    <nav class="bg-dark text-white shadow-lg" style="width: 280px; position: fixed; height: 100vh; overflow-y: auto; z-index: 1000;">
        <div class="p-4 border-bottom border-secondary">
            <h5 class="mb-1 fw-bold">
                <i class="bi bi-shield-check text-primary"></i> Admin Panel
            </h5>
            <small class="text-white-50">HelpDesk Kyotera System</small>
        </div>

        <ul class="nav flex-column p-3">
            <li class="nav-item mb-2">
                <a class="nav-link text-white active rounded-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "bg-primary bg-opacity-25" : "")" 
                   asp-action="Index" asp-controller="Home">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white rounded-3" asp-controller="Users" asp-action="Index">
                    <i class="bi bi-people me-2"></i> Users
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white rounded-3" asp-controller="Departments" asp-action="Index">
                    <i class="bi bi-building me-2"></i> Departments
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white rounded-3" asp-controller="Roles" asp-action="Index">
                    <i class="bi bi-shield-lock me-2"></i> Roles
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white rounded-3" asp-controller="Tickets" asp-action="Index">
                    <i class="bi bi-ticket-perforated me-2"></i> All Tickets
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white rounded-3" asp-controller="Claims" asp-action="Index">
                    <i class="bi bi-file-earmark-text me-2"></i> Claims
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white rounded-3" asp-controller="DataSeeding" asp-action="Index">
                    <i class="bi bi-database-gear me-2"></i> Data Seeding
                </a>
            </li>
        </ul>

        <hr class="bg-white bg-opacity-10 my-4 mx-3">

        <div class="p-3 border-top border-secondary">
            <div class="mb-3">
                <small class="text-white-50 d-block mb-1">Logged in as</small>
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-circle me-2 text-primary"></i>
                    <strong class="text-white">@User.Identity?.Name</strong>
                </div>
            </div>
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-grid">
                <button type="submit" class="btn btn-outline-danger btn-sm border-white text-white hover-bg-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        </div>
    </nav>

    <!-- Main Content -->
    <main style="margin-left: 280px; width: calc(100% - 280px);">
        <!-- Top Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top border-bottom">
            <div class="container-fluid">
                <h4 class="navbar-brand mb-0 fw-bold text-dark">
                    <i class="bi bi-speedometer2 text-primary me-2"></i> Dashboard Overview
                </h4>
                <div class="ms-auto text-muted fw-medium">
                    <i class="bi bi-calendar3 me-1"></i> @DateTime.Now:dddd, MMMM dd, yyyy
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div class="container-fluid p-5">

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-3 shadow-sm" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Stats Cards -->
            <div class="row g-4 mb-5">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 bg-gradient-start-primary rounded-4 overflow-hidden">
                        <div class="card-body text-white">
                            <div class="d-flex align-items-center">
                                <div>
                                    <h6 class="mb-1 text-white-50">Total Tickets</h6>
                                    <h2 class="mb-0 fw-bold">@Model.TotalTickets</h2>
                                </div>
                                <div class="ms-auto">
                                    <i class="bi bi-ticket-perforated" style="font-size: 4rem; opacity: 0.3;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white bg-opacity-10 border-0">
                            <a asp-controller="Tickets" asp-action="Index" class="text-white small text-decoration-none fw-medium">
                                View all tickets <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 bg-gradient-start-success rounded-4 overflow-hidden">
                        <div class="card-body text-white">
                            <div class="d-flex align-items-center">
                                <div>
                                    <h6 class="mb-1 text-white-50">Departments</h6>
                                    <h2 class="mb-0 fw-bold">@Model.TotalDepartments</h2>
                                </div>
                                <div class="ms-auto">
                                    <i class="bi bi-building" style="font-size: 4rem; opacity: 0.3;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white bg-opacity-10 border-0">
                            <a asp-controller="Departments" asp-action="Index" class="text-white small text-decoration-none fw-medium">
                                View all departments <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 bg-gradient-start-info rounded-4 overflow-hidden">
                        <div class="card-body text-white">
                            <div class="d-flex align-items-center">
                                <div>
                                    <h6 class="mb-1 text-white-50">Total Users</h6>
                                    <h2 class="mb-0 fw-bold">@Model.TotalUsers</h2>
                                </div>
                                <div class="ms-auto">
                                    <i class="bi bi-people" style="font-size: 4rem; opacity: 0.3;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white bg-opacity-10 border-0">
                            <a asp-controller="Users" asp-action="Index" class="text-white small text-decoration-none fw-medium">
                                View all users <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Tickets & Quick Actions -->
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm rounded-4">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0 fw-bold text-dark">
                                <i class="bi bi-clock-history text-primary me-2"></i> Recent Tickets
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.RecentTickets.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Ticket #</th>
                                                <th>Title</th>
                                                <th>Status</th>
                                                <th>Priority</th>
                                                <th>Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ticket in Model.RecentTickets)
                                            {
                                                <tr>
                                                    <td><span class="fw-bold text-primary">#@ticket.TicketNumber</span></td>
                                                    <td>@ticket.Title</td>
                                                    <td>
                                                        @if (ticket.Status != null)
                                                        {
                                                            <span class="badge rounded-pill px-3 py-2 bg-@(ticket.Status.Name == "Open" ? "success" : ticket.Status.Name == "Closed" ? "secondary" : "warning")">
                                                                @ticket.Status.Name
                                                            </span>
                                                        }
                                                    </td>
                                                    <td><span class="badge bg-light text-dark">N/A</span></td>
                                                    <td><small class="text-muted">@ticket.CreatedOn.ToString("MMM dd, yyyy")</small></td>
                                                    <td>
                                                        <a asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.TicketId" 
                                                           class="btn btn-sm btn-outline-primary rounded-pill px-3">View</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center py-4">No recent tickets found.</p>
                            }
                        </div>
                        <div class="card-footer bg-light border-0 text-end py-3">
                            <a asp-controller="Tickets" asp-action="Index" class="btn btn-primary rounded-pill px-4">View All Tickets</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Quick Actions -->
                    <div class="card border-0 shadow-sm rounded-4 mb-4">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0 fw-bold text-dark">
                                <i class="bi bi-lightning-charge text-warning me-2"></i> Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-3">
                                <a asp-controller="Users" asp-action="Create" class="btn btn-primary rounded-pill">
                                    <i class="bi bi-person-plus"></i> Add New User
                                </a>
                                <a asp-controller="Departments" asp-action="Create" class="btn btn-success rounded-pill">
                                    <i class="bi bi-building-add"></i> Create Department
                                </a>
                                <a asp-controller="Roles" asp-action="Create" class="btn btn-info text-white rounded-pill">
                                    <i class="bi bi-shield-lock"></i> Create Role
                                </a>
                                <a asp-controller="Tickets" asp-action="Index" class="btn btn-warning rounded-pill">
                                    <i class="bi bi-ticket-perforated"></i> Manage Tickets
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Departments -->
                    <div class="card border-0 shadow-sm rounded-4">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0 fw-bold text-dark">
                                <i class="bi bi-building text-success me-2"></i> Departments
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.Departments.Any())
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var dept in Model.Departments.Take(5))
                                    {
                                        <a asp-controller="Departments" asp-action="Details" asp-route-id="@dept.DepartmentId" 
                                           class="list-group-item list-group-item-action px-4 py-3 border-0">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1 fw-semibold">@dept.Name</h6>
                                                    <small class="text-muted">@(dept.Location?.Name ?? "No location")</small>
                                                </div>
                                                <span class="badge bg-primary rounded-pill">@dept.Users.Count users</span>
                                            </div>
                                        </a>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center py-4 mb-0">No departments available.</p>
                            }
                        </div>
                        <div class="card-footer bg-light border-0 text-end py-3">
                            <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">View All</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<style>
    /* Custom Gradient Backgrounds */
    .bg-gradient-start-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0d6efd 50%, #0d5bfd 100%);
    }
    .bg-gradient-start-success {
        background: linear-gradient(135deg, #198754 0%, #157347 100%);
    }
    .bg-gradient-start-info {
        background: linear-gradient(135deg, #0dcaf0 0%, #0db8d8 100%);
    }

    /* Sidebar Improvements */
    .nav-link {
        padding: 0.75rem 1rem !important;
        transition: all 0.3s ease;
        border-radius: 0.5rem !important;
        margin: 0.25rem 0.5rem;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.15) !important;
        padding-left: 1.5rem !important;
        transform: translateX(4px);
    }

    .nav-link.active {
        background-color: rgba(13, 110, 253, 0.25) !important;
        font-weight: 600;
    }

    /* Card & Button Enhancements */
    .card {
        transition: all 0.3s ease;
        border-radius: 1rem !important;
    }

    .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1) !important;
    }

    .btn {
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    /* Scrollbar */
    nav::-webkit-scrollbar {
        width: 6px;
    }
    nav::-webkit-scrollbar-track {
        background: transparent;
    }
    nav::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 3px;
    }
    nav::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.5);
    }

    /* Badge improvements */
    .badge {
        font-weight: 600;
    }
</style>