@{
    ViewData["Title"] = ViewData["Title"] ?? "HelpDesk Kyotera";
    bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    bool isAdmin = User?.IsInRole("Admin") ?? false;
    bool isCeo= User?.IsInRole("Ceo") ?? false;
    bool isStaff = isAdmin || isCeo; // Admin OR Ceo
    
    // Get current controller to hide hero on Account pages
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var showHero = !isAdmin && controller != "Account";
}
@inject HelpDeskKyotera.Services.INotificationService NotificationService
@{
    Guid? layoutUserId = null;
    int unreadCount = 0;
    IEnumerable<HelpDeskKyotera.Models.Notification> layoutNotifications = new List<HelpDeskKyotera.Models.Notification>();
    if (isAuthenticated)
    {
        var idClaim = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        if (Guid.TryParse(idClaim, out var uid))
        {
            layoutUserId = uid;
            try
            {
                unreadCount = NotificationService.GetUnreadCountAsync(uid).GetAwaiter().GetResult();
                layoutNotifications = NotificationService.GetUserNotificationsAsync(uid, 5).GetAwaiter().GetResult();
            }
            catch { }
        }
    }
}
