                    @if (isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Chat")" title="Chat">
                                <i class="bi bi-chat-left-text"></i>
                            </a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link position-relative" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bell"></i>
                                @if (unreadCount > 0)
                                {
                                    <span class="badge bg-danger rounded-pill position-absolute" style="top:6px;right:6px;font-size:.65rem;">@unreadCount</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end p-2" style="min-width:320px;">
