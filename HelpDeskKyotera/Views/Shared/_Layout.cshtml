                                                </div>
                                                <div class="ms-2">
                                                    <form asp-controller="Notifications" asp-action="MarkAsRead" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@n.NotificationId" />
                                                        <button class="btn btn-sm btn-outline-secondary" type="submit">Mark</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }
                                    <li class="text-center"><a class="small" href="@Url.Action("Index","Notifications")">View all</a></li>
                                }
                                else
                                {
                                    <li class="px-3 py-2 text-center text-muted">No new notifications</li>
                                }
                            </ul>
                        </li>
                    }
