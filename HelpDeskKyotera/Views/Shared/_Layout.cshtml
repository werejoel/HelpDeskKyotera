                                <li><hr class="dropdown-divider" /></li>
                                @if (layoutNotifications != null && layoutNotifications.Any())
                                {
                                    foreach (var n in layoutNotifications)
                                    {
                                        <li class="px-2 py-1">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <div class="fw-semibold">@Html.Raw(n.Subject)</div>
                                                    <div class="small text-muted">@Html.Raw(n.Body.Length > 120 ? n.Body.Substring(0,120) + "..." : n.Body)</div>
