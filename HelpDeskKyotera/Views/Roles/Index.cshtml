

@using HelpDeskKyotera.ViewModels
@using HelpDeskKyotera.ViewModels.Roles
@model PagedResult<RoleListItemViewModel>
@{
    ViewData["Title"] = "Roles";
    var filter = (RoleListFilterViewModel)ViewBag.Filter;
    int total = Model.TotalCount;
    int activeCount = Model.Items.Count(r => r.IsActive);
    int inactiveCount = total - activeCount;
}

<div class="container-fluid mt-4">
    <div class="d-flex flex-column flex-md-row align-items-start align-md-items-center justify-content-between mb-4 gap-3">
        <div>
            <h1 class="h2 fw-bold mb-1 text-primary"><i class="bi bi-shield-lock-fill me-2"></i>Roles</h1>
            <p class="text-muted mb-0">Manage application roles, permissions, and assignments.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-lg me-1"></i>Create Role
            </a>
        </div>
    </div>

    <!-- Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Total Roles</p>
                        <h3 class="mb-0 fw-bold">@total</h3>
                    </div>
                    <i class="bi bi-people-fill text-primary" style="font-size:2rem; opacity:0.15"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Active</p>
                        <h3 class="mb-0 text-success fw-bold">@activeCount</h3>
                    </div>
                    <i class="bi bi-check-circle-fill text-success" style="font-size:2rem; opacity:0.15"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Inactive</p>
                        <h3 class="mb-0 text-danger fw-bold">@inactiveCount</h3>
                    </div>
                    <i class="bi bi-x-circle-fill text-danger" style="font-size:2rem; opacity:0.15"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Page</p>
                        <h3 class="mb-0 fw-bold">@Model.PageNumber / @Math.Ceiling((double)Model.TotalCount / Model.PageSize)</h3>
                    </div>
                    <i class="bi bi-file-earmark-text text-info" style="font-size:2rem; opacity:0.15"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3 align-items-end">
                <div class="col-lg-5">
                    <label class="form-label fw-semibold">Search</label>
                    <input name="Search" value="@filter.Search" class="form-control form-control-lg" placeholder="Role name or description" />
                </div>
                <div class="col-lg-2">
                    <label class="form-label fw-semibold">Status</label>
                    <select name="IsActive" class="form-select form-select-lg">
                        <option value="">All</option>
                        <option value="true" selected="@(filter.IsActive == true)">Active</option>
                        <option value="false" selected="@(filter.IsActive == false)">Inactive</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <label class="form-label fw-semibold">Page Size</label>
                    <select name="PageSize" class="form-select form-select-lg">
                        @foreach (var size in new[] { 5, 10, 20, 50 })
                        {
                            <option value="@size" selected="@(filter.PageSize == size)">@size</option>
                        }
                    </select>
                </div>
                <div class="col-lg-3 d-flex gap-2">
                    <button class="btn btn-primary btn-lg" type="submit"><i class="bi bi-funnel me-2"></i>Apply</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg"><i class="bi bi-x-circle me-2"></i>Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Roles Table -->
    @if (Model.Items.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-semibold">Role</th>
                                <th class="fw-semibold">Description</th>
                                <th class="fw-semibold">Status</th>
                                <th class="fw-semibold">Created</th>
                                <th class="fw-semibold text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model.Items)
                            {
                                var desc = r.Description ?? string.Empty;
                                var shortDesc = desc.Length > 120 ? desc.Substring(0, 117) + "..." : desc;
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="bg-primary text-white d-flex align-items-center justify-content-center rounded-circle" style="width:38px;height:38px;">
                                                <i class="bi bi-shield-lock-fill"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@r.Name</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span data-bs-toggle="tooltip" title="@desc">@shortDesc</span></td>
                                    <td>
                                        @if (r.IsActive)
                                        {
                                            <span class="badge rounded-pill bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td><small class="text-muted">@r.CreatedOn?.ToString("MMM dd, yyyy")</small></td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-outline-info" title="View"><i class="bi bi-eye"></i></a>
                                            <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary" title="Edit"><i class="bi bi-pencil"></i></a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-role-id="@r.Id" data-role-name="@r.Name" title="Delete"><i class="bi bi-trash"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <partial name="~/Views/Shared/_Pager.cshtml" model="new PagedResult<object> { Items = Array.Empty<object>(), TotalCount = Model.TotalCount, PageNumber = Model.PageNumber, PageSize = Model.PageSize }" />
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="display-6 mb-2">No roles found</div>
                <p class="text-muted mb-4">Adjust filters or create a new role to get started.</p>
                <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i>Create Role</a>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteLabel">Delete Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete role <strong id="delRoleName"></strong>?
                <div class="text-muted small mt-2">This action cannot be undone.</div>
            </div>
            <div class="modal-footer">
                <form id="delForm" method="post" asp-action="Delete" asp-controller="Roles">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delId" />
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            // Enable Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (el) { new bootstrap.Tooltip(el); });

            var confirmModal = document.getElementById('confirmDeleteModal');
            if (confirmModal) {
                confirmModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    var roleId = button.getAttribute('data-role-id');
                    var roleName = button.getAttribute('data-role-name');
                    document.getElementById('delRoleName').textContent = roleName || '';
                    document.getElementById('delId').value = roleId || '';
                });
            }
        })();
    </script>
}