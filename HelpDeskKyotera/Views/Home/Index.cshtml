@{
	ViewData["Title"] = "Welcome";
}

<!-- Hero -->
<section id="hero" class="py-5 bg-light">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-7">
				<h1 class="display-5 fw-bold">HelpDesk Kyotera</h1>
				<p class="lead text-muted">Streamline issue tracking, manage support requests, and collaborate with your team — all in one place.</p>
				<div class="mt-4">
					<a asp-controller="Tickets" asp-action="Create" class="btn btn-primary btn-lg me-2">Create Ticket</a>
					<a asp-action="Index" asp-controller="Tickets" class="btn btn-outline-secondary btn-lg">View Tickets</a>
				</div>
			</div>
			<div class="col-md-5 text-center mt-4 mt-md-0">
				<img src="~/images/hero-illustration.svg" alt="HelpDesk illustration" class="img-fluid" style="max-height:260px;opacity:0.95;" />
			</div>
		</div>
	</div>
</section>

<!-- Features / Getting Started -->
<section class="py-5">
	<div class="container">
		<div class="row g-4">
			<div class="col-md-4">
				<div class="card h-100 border-0 shadow-sm">
					<div class="card-body">
						<h5 class="card-title">Quick Tickets</h5>
						<p class="card-text text-muted small">Create and assign tickets quickly with clear priorities and statuses.</p>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card h-100 border-0 shadow-sm">
					<div class="card-body">
						<h5 class="card-title">Team Collaboration</h5>
						<p class="card-text text-muted small">Discuss issues, add comments, and keep stakeholders informed.</p>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card h-100 border-0 shadow-sm">
					<div class="card-body">
						<h5 class="card-title">Reports & Metrics</h5>
						<p class="card-text text-muted small">Track SLAs and ticket trends with built-in reporting tools.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<script>
		// If navigated with a hash, ensure smooth scroll to hero
		(function(){
			if (window.location.hash === '#hero') {
				var el = document.getElementById('hero');
				if (el) { el.scrollIntoView({ behavior: 'smooth', block: 'start' }); }
			}
		})();
	</script>
}
